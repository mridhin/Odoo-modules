<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="th_number_inherit" model="ir.ui.view">
        <field name="name">th_number.inherit</field>
        <field name="model">th.number</field>
        <field name="inherit_id" ref="awb_megacem_drivers_report.view_drivers_thnumber_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <button name="action_count_inventory" type="object" class="oe_stat_button" icon="fa-list">
                    <div class="o_stat_info">
                        <field name="inventory_count" class="o_stat_value"/>
                        <span class="o_stat_text">Inventory</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>