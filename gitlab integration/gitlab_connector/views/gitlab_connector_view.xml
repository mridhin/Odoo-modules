<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_gitlab_configuration_form" model="ir.ui.view">
            <field name="name">gitlab.connector.form</field>
            <field name="model">gitlab.connector</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="import_gitlab_project_data" type="object" string="Import Project" class="oe_highlight"/>
                        <button name="import_project_member_data" type="object" string="Import Member" class="oe_highlight"/>
                        <button name="import_project_labels" type="object" string="Import Labels" class="oe_highlight"/>
                        <button name="import_project_milestones_data" type="object" string="Import Milestones" class="oe_highlight"/>
                        <button name="import_ticket_status" type="object" string="Import Status" class="oe_highlight"/>
                        <button name="import_project_issue_data" type="object" string="Import Issue" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="states_prefix" required="1"/>
                            </group>
                            <group>
                                <field name="url" required="1"/>
                                <field name="token" required="1" password="True"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_gitlab_connector_config" model="ir.actions.act_window">
            <field name="name">Gitlab Configuration</field>
            <field name="res_model">gitlab.connector</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_gitlab_connector"
            name="Gitlab Configuration"
            action="action_gitlab_connector_config"
            parent="project.menu_project_config"/>
    </data>
</odoo>