<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="awb_report_payment_receipt_document" inherit_id="account.report_payment_receipt_document">
        <!-- Add header and footer. -->
        <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
            <attribute name="t-call">awb_invoice_receipt.awb_custom_external_layout</attribute>
        </xpath>
        <!-- Change font size of 'page' -->
        <xpath expr="//div[hasclass('page')]" position="attributes">
            <attribute name="style">font-size: .7em;</attribute>
        </xpath>
        <!-- Alter h3 -->
        <xpath expr="//h3" position="replace">
            <h3>
                <t t-if="o.journal_id.journal_type_selection == 'or'">
                    <strong>Official Receipt: <span t-field="o.name"/>
                        <span t-if='o.print_increment > 1'>
                            (REPRINT)
                        </span>
                    </strong>
                </t>
                <t t-elif="o.journal_id.journal_type_selection == 'cr'">
                    <strong>Collection Receipt: <span t-field="o.name"/>
                        <span t-if='o.print_increment > 1'>
                            (REPRINT)
                        </span>
                    </strong>
                </t>
            </h3>
        </xpath>
        <!-- Add word REPRINT if the receipt is reprinted -->
        <!-- <xpath expr="//span[@t-field='o.name']" position="after">
            <span t-if='o.print_increment > 1'>
                (REPRINT)
            </span>
        </xpath> -->
        <!-- Move Payment Method -->
        <xpath expr="//div[@t-if='o.payment_method_id']" position="replace">
            <!-- Replace with blank to remove -->
        </xpath>
        <xpath expr="//div[@t-if='o.date']" position="after">
            <!-- Move in line with Payment Date: -->
            <div class="col-6" t-if="o.payment_method_id">
                Payment Method: <span t-field="o.payment_method_id.name"/>
            </div>
        </xpath>
        <!-- Add partner additional info. -->
        <xpath expr="//div[@class='mb-4 mt-3']/div[@class='row'][2]" position="after">
            <div class="mb-5">
                <div class="row">
                    <div class="col-6" t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                </div>
                <div class="row mt-16" t-if="o.partner_id.vat" style="line-height: 1.2; font-size: .8em; margin-top: 1em;">
                    <div class="col-2"> 
                        <span t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                        <span t-else="">Tax ID:</span>
                    </div>
                    <div class="col-3"> 
                        <span t-field="o.partner_id.vat"/>-<span t-if="o.partner_id.branch_code" t-field="o.partner_id.branch_code"/>
                    </div>
                </div>
                <div class="row" t-if="o.partner_id.awb_invoice_receipt_business_style" style="font-size: .8em;">
                    <div class="col-2">
                        Business Style: 
                    </div>
                    <div class="col-3">
                        <span t-out="o.partner_id.awb_invoice_receipt_business_style"/>
                    </div>
                </div>
                <!-- IF SC/PWD IS TRUE -->
                <div t-if="o.partner_id.check_sc_pwd" style="font-size: .8em">
                    <div class="row">
                        <div class="col-2">
                            SC/PWD ID:
                        </div>
                        <div class="col-3" style="border-bottom: 1px solid black; line-height: 1;"/>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            SC/PWD TIN:
                        </div>
                        <div class="col-3" style="border-bottom: 1px solid black; line-height: 1;"/>
                    </div>
                </div>
            </div>
        </xpath>
        <!-- ADD Product Breakdown -->
        <xpath expr="//table[@class='table table-sm']" position="after">
            <t t-foreach="invoices" t-as="inv">
                <div class="mt-5">
                    <h4 t-if="inv.name" t-field="inv.name"/>
                </div>
                <table class="table table-sm o_main_table table-borderless" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th name="th_description" class="text-left"><span>Description</span></th>
                            <th name="th_quantity" class="text-right"><span>Quantity</span></th>
                            <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                            <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Disc.%</span>
                            </th>
                            <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                            <th name="th_subtotal" class="text-right">
                                <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines" t-value="inv.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t  t-if="line.display_type not in ['line_section','line_note']" name="account_invoice_line_accountable">
                                    <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                    <td class="text-right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="line.discount"/>
                                    </td>
                                    <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": inv.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <!-- Add Sales Breakdown -->
                <div class="clearfix mb-4">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                            <table class="table table-sm table-borderless" style="page-break-inside: avoid;">

                                <!--Tax totals-->
                                <t t-set="tax_totals" t-value="o.tax_totals"/>
                                <!-- TODO: check if o needs to be inv -->
                                <t t-if="o.partner_id.check_sc_pwd">
                                    <!-- Custom Sales Breakdown Enabled for SC/PWD Customers-->
                                    <t t-set="currency_id" t-value="inv.company_id.currency_id"/>
                                    
                                    <!-- IF TRANSACTION IS TAX EXCLUSIVE OR BOTH -->

                                    <t t-if="inv.is_tax_exclusive">
                                        <tr class="border-black">
                                            <td>Total Sales (with VAT)</td>
                                            <td class="text-right">
                                                <span t-field="inv.amount_total_sales_w_vat"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Less: VAT (12%)</td>
                                            <td class="text-right">
                                                <span t-field="inv.amount_less_vat"/>
                                            </td>
                                        </tr>
                                        <tr >
                                            <td>Amount (net of VAT):</td>
                                            <td class="text-right">
                                                <span t-field="inv.amount_net_vat"/>
                                            </td>
                                        </tr>
                                        <tr >
                                            <td>Less: Discounts</td>
                                            <td class="text-right">
                                                <span t-field="inv.amount_total_discounts"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Add: VAT (12%)</td>
                                            <td class="text-right">
                                                <span t-field="inv.amount_add_vat"/>
                                            </td>
                                        </tr>
                                        <tr class="border-black o_total">
                                            <td><strong>Total Amount</strong></td>
                                            <td class="text-right">
                                                <t t-set="total_amount" t-value="inv.amount_total_sales_w_vat-inv.amount_less_vat-inv.amount_total_discounts+inv.amount_add_vat"/>
                                                <span t-out="total_amount" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    
                                    <!-- IF TRANSACTION IS TAX INCLUSIVE ONLY -->

                                    <t t-elif="inv.is_tax_exclusive != True">
                                        <tr class="border-black">
                                            <td>Total Sales (with VAT)</td>
                                            <td class="text-right">
                                                <span t-field="inv.amount_total_sales_w_vat"/>
                                            </td>
                                        </tr>
                                        <tr >
                                            <td>Less: Discounts</td>
                                            <td class="text-right">
                                                <span t-field="inv.amount_total_discounts"/>
                                            </td>
                                        </tr>
                                        <tr class="border-black o_total">
                                            <td><strong>Total Amount</strong></td>
                                            <td class="text-right">
                                                <t t-set="total_amount" t-value="inv.amount_total_sales_w_vat-inv.amount_total_discounts"/>
                                                <span t-out="total_amount" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <t t-else="">
                                    <t t-call="account.document_tax_totals"/>
                                </t>

                                <!--Payments-->
                                <t t-if="print_with_payments">
                                    <t t-if="inv.payment_state != 'invoicing_legacy'">
                                        <t t-set="payments_vals" t-value="inv.sudo()._get_reconciled_info_JSON_values()"/>
                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                            <tr>
                                                <td>
                                                    <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": inv.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="len(payments_vals) > 0">
                                            <tr class="border-black">
                                                <td><strong>Amount Due</strong></td>
                                                <td class="text-right">
                                                    <span t-field="inv.amount_residual"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Add VAT Breakdown -->
                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                    <table class="table table-sm table-borderless" style="page-break-inside: avoid;">
                        <th colspan="2">VAT Breakdown</th>
                        <tr class="border-black">
                            <td>VATable Sales:</td>
                            <td class="text-right">
                                <span t-field="inv.amount_vatable_sales"/>
                            </td>
                        </tr>
                        <tr>
                            <td>VAT Amount:</td>
                            <td class="text-right">
                                <span t-field="inv.amount_vat_amount"/>
                            </td>
                        </tr>
                        <tr >
                            <td>VAT Exempt Sales:</td>
                            <td class="text-right">
                                <span t-field="inv.amount_vat_exempt_sales"/>
                            </td>
                        </tr>
                        <tr >
                            <td>Zero-Rated Sales:</td>
                            <td class="text-right">
                                <span t-field="inv.amount_zero_rated_sales"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>

            <div class="mt-5">
                <!-- If Customer is SC/PWD, add signature-->
                <!-- <div t-if="o.partner_id.check_sc_pwd" style="border-top: 1px dashed black; width: 30%; float: right; text-align: center; margin-right: 5em;">SC/PWD's Signature:</div> -->
                            
                <!-- Add Issue Info -->
                <div>
                    <strong>Acknowledgement Certificate No.:</strong>
                    <span t-if="o.company_id.acknowledgement_certificate" t-field="o.company_id.acknowledgement_certificate"/>
                </div>
                <div>
                    <strong>Date Issued:</strong>
                    <span t-if="o.company_id.certificate_date_issued" t-field="o.company_id.certificate_date_issued"/>
                </div>
                <div>
                    <strong>Series Range:</strong>
                    <span t-if="o.company_id.series_range" t-field="o.company_id.series_range"/>
                </div>
                <div style="padding-top: 1em;">
                    <strong t-if="o.company_id.taxpayer_remarks" t-field="o.company_id.taxpayer_remarks"/>
                </div>
                <div style="padding-top: 1em;">
                    <strong t-if="o.journal_id.journal_remarks" t-field="o.journal_id.journal_remarks"/>
                </div>
                <div style="padding-top: 2em;">
                    <div t-if="o.partner_id.check_sc_pwd" style="border-top: 1px dashed black; width: 30%; float: right; text-align: center; margin-right: 5em;">SC/PWD's Signature:</div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
