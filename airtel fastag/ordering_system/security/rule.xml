<odoo>
    <record id="request_record_rule_manager_user" model="ir.rule">
        <field name="name">Enterprise Manager can see only their Requests</field>
        <field name="model_id"
               ref="ordering_system.model_ordering_system"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref ('record_rule.group_enterprise_manager'))]"/>
        <field name="domain_force">[('requester_name.id', '=', user.id)]
        </field>
    </record>
</odoo>