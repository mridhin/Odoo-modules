<?xml version="1.0"?>
<odoo>
    <data>

        <record id="add_product_in_line_form_view" model="ir.ui.view">
            <field name="name">Add Product</field>
            <field name="model">order.line.product</field>
            <field name="arch" type="xml">
                <form string="Product Details">
                    <sheet>
                        <group>
                            <group>
                              <field name="fastag_product" filename="filename"/>
                                <field name="filename" invisible="1"/>
                                <field name="user_id"  invisible="1" readonly="1"/>
                               
                            </group>
                            <group>
                                <button name="upload_product_line"
                                        string="Import Fastag"
                                        context="{'default_active_id': active_id}"
                                        type="object" class="oe_highlight"/>
<!--                                <button name="product_line"-->
<!--                                        string="Product Sold"-->
<!--                                        type="object" class="oe_highlight"/>-->
<!--                                <button name="product_update_line"-->
<!--                                        string="Product update line"-->
<!--                                        type="object" class="oe_highlight"/>-->
                            </group>
                        </group>
                        <group>
                            <field name="order_line_form" readonly="1">
                                <tree>
                                    <field name="product_id" invisible="1"/>
                                    <field name="picking_id" invisible="1"/>
                                    <field name="fatag_bracode"/>
                                    <field name="circle_name"/>
                                    <field name="date_of_dispatch"/>
                                    <field name="consignment_no"/>
                                    <field name="delivery_partner"/>
                                    <field name="emp_mobile_no"/>
                                    <field name="category_id"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button name="set_fastag_move_details" string="Confirm" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_highlight" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="add_product_line_action_view">
            <field name="name">Add Product</field>
            <field name="res_model">order.line.product</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <record id="message_wizard_form" model="ir.ui.view">
            <field name="name">message.wizard.form</field>
            <field name="model">message.wizard</field>
            <field name="arch" type="xml">
                <form >
                    <p class="text-center">
                        <field name="message"/>
                    </p>
                <footer>
                    <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="check_wizard_form_sold">
            <field name="name">Unlink Tag</field>
            <field name="model">product.sold</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="fastag_product"
                                       filename="filename"/>
                                <field name="filename" invisible="1"/>
                            </group>
                            <group>
                                <button name="product_update_line"
                                        string="Import Records"
                                        type="object" class="oe_highlight"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>
    <record model="ir.actions.act_window" id="sold_product_action">
        <field name="name">Find Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.sold</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="check_wizard_form_sold"/>
        <field name="target">new</field>
    </record>
      <menuitem name="Sold Product" id="sold_1"
                  parent="stock.menu_stock_inventory_control"
                  action="sold_product_action" sequence="5"
                    groups="record_rule.group_warhouse_manager"/>
    </data>
</odoo>
