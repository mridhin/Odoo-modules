<odoo>
  <data>
    <!-- explicit tree view definition -->
        <record model="ir.ui.view" id="all_transfer_report_tree">
              <field name="name">Transfer Report list</field>
              <field name="model">all.transfer.report</field>
              <field name="arch" type="xml">
                <tree>
                    <header>
                        <button name="update_tagclass" string="Update Tag Class" type="object" class="oe_highlight"/>
                         <button name="unlinked_tag" type="object" string="Update Unlike Tag"/>
                    </header>

                    <field name="rs_name"/>
                    <field name="name"/>
                    <field name="rs_assigned_id"/>
                    <field name="rs_emp_name"/>
                    <field name="rs_designation"/>
                    <field name="rs_emp_no"/>
                    <field name="rs_to_emp_no"/>
                    <field name="rs_circle"/>
                    <field name="rs_assi_date"/>
                    <field name="product_amount"/>
                     <field name="rs_tag_sold"/>
                    <field name="rs_fault_tags"/>
                   
                    <field name="rs_unlinked"/>
                     <field name="rs_balance_stock"/>
                    <field name="tag_class" readonly="1"/>
                </tree>
              </field>
        </record>

        <record model="ir.ui.view" id="all_transfer_report_form">
            <field name="name">Transfer Report Form</field>
            <field name="model">all.transfer.report</field>
            <field name="arch" type="xml">
                <form string="Transfer Report Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="rs_assigned_id"/>
                               <field name="rs_designation"/>
                                <field name="rs_emp_no"/>
                                <field name="rs_to_emp_no"/>
                                <field name="tag_class" readonly="1"/>
                            </group>
                            <group>
                                <field name="rs_circle"/>
                                <field name="rs_assi_date"/>
                                <field name="rs_tag_transfer"/>
                                <field name="rs_tag_sold"/>
                                <field name="rs_fault_tags"/>
                                <field name="rs_unlinked"/>
                                <field name="rs_balance_stock"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         <!-- search and group by -->

  <record id="view_all_transfer_report_form_search" model="ir.ui.view">
            <field name="name">transfer.report.search</field>
            <field name="model">all.transfer.report</field>
            <field name="arch" type="xml">
                <search string="All Transfer Report">
                    <field name="name"/>
                    <field name="rs_assigned_id"/>
                    <field name="rs_designation"/>
                    <field name="rs_emp_no"/>
                    <field name="rs_to_emp_no"/>
                    <field name="rs_circle"/>
                    <field name="rs_assi_date"/>
                    <field name="rs_tag_sold"/>
                    <field name="rs_fault_tags"/>
                    <field name="rs_unlinked"/>
                    <field name="tag_class"/>
                    <group expand="0" string="Group By">
                        <filter string="Barcode" name="name" context="{'group_by':'name'}" help="Barcode"/>

                        <filter string="Designation" name="rs_designation" context="{'group_by':'rs_designation'}" help="Barcode"/>

                        <filter string="Assigned To" name="rs_assigned_id" context="{'group_by':'rs_assigned_id'}" help="Assigned" />

                        <filter string="Circle" name="rs_circle" context="{'group_by':'rs_circle'}" help="Circle" />

                         <filter string="From Emp No" name="rs_emp_no" context="{'group_by':'rs_emp_no'}" help="From Emp No"/>

                        <filter string="To Emp No" name="rs_to_emp_no" context="{'group_by':'rs_to_emp_no'}" help="To Emp No" />

                        <filter string="Transfer Date" name="rs_assi_date" context="{'group_by':'rs_assi_date'}" help="Transfer Date"/>

                        <filter string="Tag Sold" name="rs_tag_sold" context="{'group_by':'rs_tag_sold'}" help="Tag Sold"/>

                        <filter string="Faulty Tag" name="rs_fault_tags" context="{'group_by':'rs_fault_tags'}" help="Faulty Tag"/>

                        <filter string="Unlinked" name="rs_unlinked" context="{'group_by':'rs_unlinked'}" help="Unlinked"/>
                       <filter string="Tag Class" name="tag_class" context="{'group_by':'tag_class'}" help="Tag Class"/>
                        
                    </group>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="action_all_transfer_report">
              <field name="name">All Report</field>
              <field name="res_model">all.transfer.report</field>
              <field name="view_mode">tree,form</field>
              <field name="domain">[]</field>
              <field name="help" type="html">
                    <p class="o_view_nocontent_smiling_face">Create Your First Transfer Report</p>
              </field>
        </record>
  </data>
</odoo>