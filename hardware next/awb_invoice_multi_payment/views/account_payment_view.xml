<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_account_invoice_from_list" model="ir.actions.server">
            <field name="name">Draft Payment (Countered Receipt)</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.action_draft_payment()
            </field>
        </record>

        <record id="awb_invoice_multi_payment_view_account_payment_form_inherited" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="button_open_draft_payment_invoices" type="object" class="oe_stat_button" icon="fa-bars"
                    attrs="{'invisible': [('draft_payment_invoice_count','=', 0)]}">
                        <field name="draft_payment_invoice_count"/>
                        <span attrs="{'invisible': ['|',('reconciled_invoices_type','!=','invoice'),('draft_payment_invoice_count','&gt;', 1)]}">Invoice</span>
                        <span attrs="{'invisible': ['|',('reconciled_invoices_type','!=','invoice'),('draft_payment_invoice_count','&lt;=', 1)]}">Invoices</span>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
