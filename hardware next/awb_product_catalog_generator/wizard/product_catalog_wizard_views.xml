<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="create_awb_product_catalog_wizard" model="ir.ui.view">
            <field name="name">product.catalog.form.wizard</field>
            <field name="model">product.catalog.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="catalog_type" widget="radio" />
                                <field name="product_ids" widget="many2many_tags"
                                    attrs="{'invisible': [('catalog_type', '=', 'category')],'required': [('catalog_type', '=', 'product')]}" />
                                <field name="categories_ids" widget="many2many_tags"
                                    attrs="{'invisible': [('catalog_type', '=', 'product')],'required': [('catalog_type', '=', 'category')]}" />
                                <field name="report_style" widget="radio" />
                            </group>
                            <group>
                                <field name="description" />
                                <field name="price" />
                                <field name="image_size" required="1" widget="radio" />
                                <field name="print_box_per_row"
                                    attrs="{'invisible': [('report_style', 'not in', ['style_2', 'style_5'])]}"
                                    widget="radio" />
                                <field name="user_id" invisible="1" />
                                <field name="company_id" invisible="1" />
                                <field name="currency_id" required="1" />
                            </group>
                        </group>
                        <footer>
                            <button name="print_style_catalog" string="Print" type="object"
                                class="oe_highlight" /> OR <button string="Cancel" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='create_awb_product_catalog_wizard_action' model='ir.actions.act_window'>
            <field name="name">Create Product catalog</field>
            <field name='type'>ir.actions.act_window</field>
            <field name="res_model">product.catalog.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="create_awb_product_catalog_wizard" />
            <field name="target">new</field>
        </record>

        <menuitem name="Create Product catalog" id="menu_create_awb_product_catalog"
            parent="awb_product_catalog_menu" action="create_awb_product_catalog_wizard_action"
            sequence="2" />

    </data>
</odoo>