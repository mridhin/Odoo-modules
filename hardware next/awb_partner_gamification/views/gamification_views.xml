<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_gamification_challenge_form_view" model="ir.ui.view">
        <field name="name">partner.gamification.challenge.form.inherit</field>
        <field name="model">gamification.challenge</field>
        <field name="inherit_id" ref="gamification.challenge_form_view"/>
        <field name="arch" type="xml">
            <field name="manager_id" position="before">
                <field name="sales_user_ids" widget="many2many_tags" />
            </field>
            <field name="user_ids" position="attributes">
                <attribute name="attrs">{'invisible' : [('sales_user_ids','!=',False)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
