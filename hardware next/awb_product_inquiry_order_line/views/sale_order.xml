<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_view_multi_product_selection_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="fl_so_po_multi_products.sale_order_view_multi_product_selection_inherit"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <button name="%(fl_so_po_multi_products.act_open_select_products_view)d" position="replace">
                    <field name="x_studio_customer_type_1" invisible="1" />
                    <button name="%(fl_so_po_multi_products.act_open_select_products_view)d" type="action" string="Select Products"
                        context="{'default_flag_order': 'so','default_customer_type': x_studio_customer_type_1}" attrs="{'invisible': [('state', '!=', 'draft')]}"
                        class="oe_highlight" />
                </button>
            </field>
        </record>
    </data>
</odoo>