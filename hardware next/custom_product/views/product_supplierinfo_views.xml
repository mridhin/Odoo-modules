<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="product_supplier_form_inherit">
        <field name="name">product.supplierinfo.form.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group" position="after">
                <notebook>
                    <page name='product' string='Products'>
                        <field name="product_supplierinfo_line_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="product_qty"/>
                                <field name="price_unit"/>
                                <!-- <field name="taxes_id"/> -->
                                <!-- <field name="price_subtotal"/> -->
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
