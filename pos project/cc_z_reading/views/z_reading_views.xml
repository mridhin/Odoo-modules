        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_z_reading', '=', True)]</field>
    </record>
    
    <menuitem id="menu_orders_pos_z_reading" action="z_reading_view_action_1" parent="point_of_sale.menu_point_of_sale" sequence="5"/>
</odoo>
