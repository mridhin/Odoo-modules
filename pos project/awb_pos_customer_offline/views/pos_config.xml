<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- add new field in pos.config form page -->
<record id="awb_pos_config_view_form" model="ir.ui.view">
			<field name="name">pos.config.form.inherit</field>
			<field name="model">pos.config</field>
			<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@id='posbox_reference']" position="after">
                <h2>PoS Customer Offline</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="auto_invoice">
                        <div class="o_setting_left_pane">
                            <field name="awb_customer_offline" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="awb_customer_offline" string="Customer Offline" />
                            <div class="text-muted mb16">
                                Can create customer in offline pos mode.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
			</field>
		</record>
</odoo>