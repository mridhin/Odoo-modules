<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
   <t t-name="DiscountPopupSP" owl="1">
       <div role="dialog" class="modal-dialog">
           <div class="popup">
               <p class="title">
                   <t t-esc="props.title" />
               </p>
               <div class="body" style="width: 90%;display: inline-flex;margin-left: 5%;margin-right: 5%;">
					<div class="select_vat" style="width: 40%;margin-left: 5%;margin-right: 5%;">
						<select id="vat_selection_id" name="vat_selection_id" class="form-control vat_selection_id" t-on-change="captureVat" required="required" placeholder="Select" style="width: -webkit-fill-available;height: -webkit-fill-available;font-size: initial;border-radius: 3px;border: none;box-shadow: 0px 0px 0px 1px rgb(220 220 220) inset;">
							<option value="vat_ex">VAT Exclusive</option>
						</select>
					</div>
					<div class="discount_val" style="width:50%;">
						<input id="dicountValue" type="text" value="10" style="text-align-last: end;" name="discount" t-on-change="captureChange" disabled="True"/>
						<span style="margin-left:5px;">%</span>
					</div>
               </div>
               <footer class="footer" >
				   <div class="awb_footer_dialog">
                        <div class="button cancel" t-on-click="cancel">
                            <span >Cancel</span>
                        </div>
                        <div class="button  confirm" style="background: #875A7B;" t-on-click="confirm">
                            <span style="color: white;">Apply to All</span>
                        </div>
                        <div class="button  apply_confirm" style="background: #875A7B;" t-on-click="applyConfirm">
                        <span style="color: white;">Apply</span>
                        </div>
                    </div>
                </footer>
           </div>
       </div>
   </t>
</templates>