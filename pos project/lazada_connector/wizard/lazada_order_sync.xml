<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lazada_order_sync" model="ir.ui.view">
        <field name="name">Lazada Order Sync</field>
        <field name="model">lazada.order.sync</field>
        <field name="arch" type="xml">
            <form string="Lazada Order Sync">
                <p class="oe_grey">
                    Lazada orders will sync to Odoo based on given data.
                </p>
                <group>
                    <field name="order_status" />
                    <field name="update_after" />
                    <field name="update_before" />
                </group>
                <footer>
                    <button name="order_sync" string="Order Sync" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_lazada_order_wizard" model="ir.actions.act_window">
        <field name="name">Lazada Order Sync</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lazada.order.sync</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- TODO: check if we need this -->
        <field name="binding_model_id" ref="lazada_connector.model_lazada_connector" />
        <field name="binding_view_types">list</field>
    </record>

</odoo>
