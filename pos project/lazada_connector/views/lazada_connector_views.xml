<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_lazada_connector">
        <field name="name">lazada.connector.view</field>
        <field name="model">lazada.connector</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_connection" string="Connect"
                            class="oe_highlight" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Refresh Token" name="refresh_access_token" type="object"
                            attrs="{'invisible': [('state', '!=', 'connection')]}"/>
                    <button string="Product Sync Lazada to Odoo" class="oe_highlight" name="%(lazada_connector.action_view_lazada_product_wizard)d" type="action"
                            attrs="{'invisible': [('state', '!=', 'connection')]}"/>
                    <button string="Product Sync Odoo to Lazada" class="oe_highlight" name="products_from_odoo_to_lazada" type="object"
                            attrs="{'invisible': [('state', '!=', 'connection')]}"/>
                    <button string="Orders Sync Lazada to Odoo" class="oe_highlight" name="%(lazada_connector.action_view_lazada_order_wizard)d" type="action"
                            attrs="{'invisible': [('state', '!=', 'connection')]}"/>
                    <button string="Import Categories" class="oe_highlight" name="get_categories" type="object"
                            attrs="{'invisible': [('state', '!=', 'connection')]}"/>
                    <button string="Import Brands" class="oe_highlight" name="get_brands" type="object"
                            attrs="{'invisible': [('state', '!=', 'connection')]}"/>
                    <button name="draft_reset" string="Reset Draft"
                            class="oe_highlight" type="object"
                            attrs="{'invisible': [('state', '!=', 'connection')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <label for="app_name"/>
                                <field name="app_name" required="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="url" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            <field name="redirect_url" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            <field name="mode" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            <field name="warehouse_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            <field name="pricelist_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            <field name="user_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                        </group>
                        <group>
                            <field name="app_key" attrs="{'readonly': [('state', 'not in', ['draft'])]}" required="1"/>
                            <field name="app_secret" attrs="{'readonly': [('state', 'not in', ['draft'])]}" required="1"/>
                            <field name="access_token" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
                            <field name="refresh_token" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
                            <field name="active" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="lazada_connector_tree_view">
        <field name="name">lazada.connector.tree</field>
        <field name="model">lazada.connector</field>
        <field name="arch" type="xml">
            <tree>
                <field name="app_name"/>
                <field name="mode"/>
                <field name="app_key"/>
                <field name="state" string="Status"/>
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="view_lazada_instance_filter" model="ir.ui.view">
        <field name="name">lazada.connector.select</field>
        <field name="model">lazada.connector</field>
        <field name="arch" type="xml">
            <search>
                <field name="app_name" string="Lazada" filter_domain="['|', ('app_name', 'ilike', self), ('app_key', 'ilike', self)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_lazada_connector_form" model="ir.actions.act_window">
        <field name="name">Lazada Connector</field>
        <field name="res_model">lazada.connector</field>
        <field name='view_mode'>tree,form</field>
        <field name="view_id" ref="lazada_connector_tree_view"/>
    </record>

    <menuitem name="Lazada"
              id="menu_lazada_connector_root"
              web_icon="lazada_connector,static/description/icon.jpg"/>

    <menuitem name="Lazada"
              id="menu_lazada_connector"
              parent="menu_lazada_connector_root"
              action="action_lazada_connector_form"
              sequence="1"
              />
    <menuitem name="Settings"
              id="menu_settings_lazada_connector"
              parent="menu_lazada_connector_root"
              sequence="2"
              />


</odoo>