<?xml version="1.0"?>
<odoo>

    <!-- inherit account payment form -->
    <record id="view_account_payment_form_tis_inherit" model="ir.ui.view">
        <field name="name">account.payment.form.tis</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group2']" position="after">
                <group name="tds_group" invisible="context.get('active_model') == 'account.move'">
                    <field name="awb_tds" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="awb_vendor_type" invisible="1"/>
                    <field name="awb_tds_tax_ids" widget="many2many_tags"
                    attrs="{'invisible':[('awb_tds','=', False)],'readonly': [('state', '!=', 'draft')],'required': [('awb_tds','=',True)]}"/>
                    <field name="awb_tds_amt"
                        attrs="{'invisible':[('awb_tds','=', False)]}" readonly="1"/>
                    <field name="awb_tds_multi_acc_ids"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_invoice_form_tds" model="ir.ui.view">
        <field name="name">account.payment.invoice.form.tds</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='communication']" position="after">
                <field name="awb_tds"/>
                <label for="awb_tds_tax_ids" attrs="{'invisible':[('awb_tds','=', False)]}"/>
                <div class="o_row">
                    <field name="awb_tds_tax_ids" widget="many2many_tags"
                           attrs="{'invisible':[('awb_tds','=', False)]}"
                    domain="[('awb_type','=','ewt'),('type_tax_use','=','sale')]"/>
                </div>
            </xpath>
            <field name="writeoff_account_id" position="replace">
                <field name="writeoff_account_id" string="Post Difference In"
                       attrs="{'invisible': ['|',('payment_difference_handling','=','open'),('awb_tds', '=', True)],'required': [('payment_difference_handling', '=', 'reconcile'), ('payment_difference', '!=', 0.0),('awb_tds', '=', False)]}"/>
            </field>
            <field name="writeoff_label" position="replace">
                <field name="writeoff_label"
                       attrs="{'invisible': ['|',('payment_difference_handling','=','open'),('awb_tds', '=', True)],'required': [('payment_difference_handling', '=', 'reconcile'), ('payment_difference', '!=', 0.0),('awb_tds', '=', False)]}"/>
            </field>
            <xpath expr="//label[@for='writeoff_account_id']" position="replace">
                <label for="writeoff_account_id" class="oe_edit_only" string="Post Difference In"
                       attrs="{'invisible': ['|',('payment_difference_handling','=','open'),('awb_tds', '=', True)]}"/>
            </xpath>
            <xpath expr="//label[@for='writeoff_label']" position="replace">
                <label for="writeoff_label" class="oe_edit_only" string="Label"
                       attrs="{'invisible': ['|',('payment_difference_handling','=','open'),('awb_tds', '=', True)]}"/>
            </xpath>

            <xpath expr="//group[1]" position="after">
                <group colspan="4">
                    <field name="awb_tds_multi_acc_ids" nolabel="1" readonly="1"  force_save="1"
                           attrs="{'invisible':[('awb_tds','=', False)]}">
                        <tree string="Post Difference Accounts" editable="bottom">
                            <field name="awb_tds_account_id"/>
                            <field name="name" required="1"/>
                            <field name="amount" sum="Total Amount"/>
                            <field name="currency_id" options="{'no_create': True, 'no_open': True}"
                                   groups="base.group_multi_currency"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

</odoo>