<odoo>
  <data>
        <record id="m_e1604_view_form" model="ir.ui.view">
            <field name="name">e.1604.form</field>
            <field name="model">e.1604</field>
            <field name="arch" type="xml">
                <form string="E1604 PDF Report">
                    <header>
                        <button name="action_report" type="object" string="Generate Report" class="oe_highlight" attrs="{'invisible': [('awb_state', '=', 'draft')]}"/>

                        <button name="action_resetdraft" type="object" string="Reset To Draft" class="oe_highlight" attrs="{'invisible': ['|',
                            ('awb_state', '=', 'draft'),
                            ('awb_entry_count','=',True)]}"/>
                        <button name="action_validate" type="object" string="Validate" class="oe_highlight" attrs="{'invisible': [('awb_state', '!=', 'draft')]}"/>
                        <button name="generate_journal_Entry" type="object" string="Generate Journal Entry" class="oe_highlight" invisible="1"/>
                        <!-- attrs="{'invisible': ['|',('awb_state', '=', 'draft'),('awb_entry_count','=',True)]}" -->
                        <field name="awb_state" statusbar_visible="draft,validated,amendment" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="awb_entry_count" invisible="1"/>
                        <field name="awb_move_id" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_journal_entry_2550q" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('awb_entry_count', '=', False)]}" string="Journal Entry">
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="awb_partner_id" options="{'no_create_edit':True,'no_create': True,'no_open': True}" attrs="{'readonly': [('awb_entry_count', '=',True)]}"/>
                                <field name="awb_company_id" required="True" attrs="{'readonly': [('awb_state', '!=', 'draft')]}"/>
                                <field name="awb_fiscal_year" domain="[('company_id', '=', awb_company_id)]" attrs="{'invisible': [('awb_company_id','=', False)],'required':[('awb_company_id','!=', False)],'readonly': [('awb_state', '!=', 'draft')]}" options="{'no_create_edit': True,'no_create': True, 'no_open': True}"/>
                                <field name="awb_fiscal_quarter" attrs="{'invisible': ['|',('awb_company_id','=', False), ('awb_fiscal_year', '=', False)], 'required':['|',
                                    ('awb_company_id','!=',False),
                                    ('awb_fiscal_year','!=',False)],
                                    'readonly': [('awb_state', '!=', 'draft')]}" 
                                    options="{'no_create_edit': True,'no_create': True,'no_open':True}" required="1"/>
                                <field name="awb_month" invisible="1"/>
                                <field name="awb_year" invisible="1"/>
                                <field name="awb_amended_return" required="1" attrs="{'readonly': [('awb_state', '!=', 'draft')]}"/>
                                <div>
                                    <button name="create_schedule" string="Create Schedule" class="btn-primary" type="object" attrs="{'invisible': [('awb_state', '!=', 'draft')]}"/>
                                </div>
                            </group>
                            <group>
                                <field name="awb_no_of_Sheets" attrs="{'readonly': [('awb_state', '!=', 'draft')]}"/>
                                <field name="awb_count_schedule" invisible="1"/>
                                <!-- <field name="awb_remittance_date" required="1" attrs="{'readonly': [('awb_state', '!=', 'draft')]}"/> -->
                                <field name="awb_issue_date" required="1" attrs="{'readonly': [('awb_state', '!=', 'draft')]}"/>
                                <field name="awb_expiry_date" required="1" attrs="{'readonly': [('awb_state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                    <notebook >
                        <page name="part_1" string="Schedule 1 – Remittance per BIR Form No. 1601-EQ">
                            <field name="awb_schedule1_ids">
                                <tree editable="bottom" create="0">
                                    <field name="awb_quarter" readonly="1" force_save="1"/>
                                    <field name="awb_date_of_remittance"/>
                                    <field name="awb_drawee"/>
                                    <field name="awb_tra_no"/>
                                    <field name="awb_taxes_withheld" readonly="1" force_save="1"/>
                                    <field name="awb_penalties" readonly="1" force_save="1"/>
                                    <field name="awb_amount_remitted" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="part_1" string="Schedule 2 – Remittance per BIR Form No. 1606">
                            <field name="awb_schedule2_ids">
                                <tree editable="bottom" create="0">
                                    <field name="awb_months" readonly="1"/>
                                    <field name="awb_date_of_remittance"/>
                                    <field name="awb_drawee"/>
                                    <field name="awb_tra_no"/>
                                    <field name="awb_taxes_withheld"/>
                                    <field name="awb_penalties"/>
                                    <field name="awb_amount_remitted"/>
                                </tree>
                            </field>
                        </page>
                        <page name="part_2" string="Accounting" attrs="{'invisible': [('awb_state', '=', 'draft')]}">
                            <group>
                                <group>
                     
                                    <field name="awb_journal_id" attrs="{'required': [('awb_state', '!=', 'draft')],'readonly':[('awb_entry_count', '=',True)]}" options="{'no_create_edit': True,'no_create': True,'no_open': True}"/>
                                    
                                    <field name="awb_move_id" options="{'no_create_edit':True,'no_create': True}" attrs="{'invisible': [('awb_entry_count', '=',False)]}" readonly="1"/>
                                </group>
                                <!-- <group>
                                    <field name="awb_barcode"/>
                                </group> -->
                            </group>
                        </page>
                    </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="e_1604_tree_view" model="ir.ui.view">
            <field name="name">0619-E Report</field>
            <field name="model">e.1604</field>
            <field name="arch" type="xml">
                <tree string="2550M PDF Report">
                    <field name="create_date" widget="date" invisible="1"/>
                    <field name="awb_company_id"/>
                    <field name="awb_fiscal_year"/>
                    <field name="awb_fiscal_quarter" string="Fiscal Quarter "/>
                    <field name="awb_issue_date"/>
                    <field name="awb_state" string="Status"/>
                    <!-- <field name="awb_special_tax_or_inter_tax_treaty"/> -->
                </tree>
            </field>
        </record>
        <record id="action_e_1604_form" model="ir.actions.act_window">
            <field name="name">1604-E</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">e.1604</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_e1604_reports"
            name="1604-E"
            parent="menu_ewt_reports"
            action="action_e_1604_form"
            />
  </data>
</odoo>
