<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_move_form__view_inherited_" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="attributes">
                    <attribute name="string">VAT</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_total']" position="attributes">
                    <attribute name="string">Total(With VAT)</attribute>
                </xpath>
                <!-- <xpath expr="//field[@name='amount_total']" position="attributes">
                    <attribute name="string">Total(With VAT)</attribute>
                </xpath> -->
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_total']" position="after">
                    <field name="awb_tds_tax_ids" widget="many2many_tags"  domain="[('type_tax_use', '=?', parent.invoice_filter_type_domain), ('company_id', '=', parent.company_id), ('awb_type', '=', 'ewt')]" attrs="{'column_invisible':[('parent.move_type','not in', ('in_invoice','in_refund'))]}"/>

                    <field name="awb_ewt_total" attrs="{'column_invisible':[('parent.move_type','not in', ('in_invoice','in_refund'))]}"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="after">
                    <field name="awb_tds_tax_ids" widget="many2many_tags" readonly="0" invisible="1"/>
                    <field name="awb_tax_id" invisible="1"/>
                </xpath>

                <field name="partner_id" position="after">
                    <field name="awb_vat_registration_status" attrs="{'invisible': [('move_type','=', 'entry')],'required':[('move_type','!=', 'entry')]}"/>
                </field>

                <xpath expr="//page/field[@name='line_ids']/tree/field[@name='name']" position="after">
                    <field name="awb_tds_tag" invisible="1"/>
                </xpath>

                <xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="replace">
                <group class="oe_subtotal_footer"
                       attrs="{'invisible': ['|', ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt')),
                                                               ('payment_state' ,'=', 'invoicing_legacy')]}">
                    <field name="amount_untaxed"/>
                    <field name="amount_tax"
                           widget="tax-group-custom-field" colspan="2"/>
                    <field name="amount_total" class="oe_subtotal_footer_separator" string="Total(With VAT)"/>
                    <field name="awb_tds_amt" attrs="{'invisible':[('move_type','not in', ('in_invoice','in_refund'))]}"/>
                    <field name="awb_amount_total" class="oe_subtotal_footer_separator"/>
                    <field name="invoice_payments_widget" colspan="2" nolabel="1" widget="payment"/>
                    <field name="amount_residual" class="oe_subtotal_footer_separator"
                           attrs="{'invisible': [('state', '=', 'draft')]}"/>
                </group>
            </xpath>

                <field name="awb_amount_total" position="attributes">
                    <attribute name="string">Net Total</attribute>
                </field>

                </field>
        </record>

        <record id="view_invoice_tree_tis_tds" model="ir.ui.view">
        <field name="name">account.move.tree.tis.tds</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total_signed" position="before">
                <field name="awb_total_gross"/>
            </field>
            <field name="amount_total_signed" position="attributes">
                <attribute name="string">Net Total</attribute>
            </field>
        </field>
    </record>
    
    </data>
</odoo>
