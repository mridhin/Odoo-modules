<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_generate_x_reading_form" model="ir.ui.view">
        <field name="name">cc_x_reading.x_reading.pdf.form</field>
        <field name="model">cc_x_reading.x_reading</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form string="X-Reading POS Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="crm_team_id" string="Sales Team" widget="selection" required="1"/>
                </group>
                <footer>
                    <button name="generate_report" string="Print" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" special="cancel" class="btn-secondary" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_report_pos_x_reading" model="ir.actions.act_window">
        <field name="name">X-Reading POS Report</field>
        <field name="res_model">cc_x_reading.x_reading</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'sequence': 1, 'view_mode': 'form', 'view_id': ref('cc_x_reading.view_generate_x_reading_form')}),
        ]"/>
    </record>
    
    <menuitem id="menu_report_pos_x_reading" name="X-reading POS Report" action="action_report_pos_x_reading" parent="point_of_sale.menu_point_rep" sequence="6"/>
</odoo>