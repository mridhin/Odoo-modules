<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='sh_pos_customer_dicount_configuration' model='ir.ui.view'>
        <field name='name'>sh.pos.customer.discount.inherit.config</field>
        <field name='model'>pos.config</field>
        <field name='inherit_id' ref='point_of_sale.pos_config_view_form' />
        <field name='arch' type='xml'>
            <xpath expr="//div[4]" position="after">
                <h2>Customer Discount</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_enable_customer_discount" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_enable_customer_discount" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">VAT Exempt Tax</span>
                            <div class="text-muted">
                                Select which VAT Exempt Tax will be used during tax exclusive discounts
                            </div>
                            <div class="content-group mt16">
                                <field name="vat_exempt_tax_config"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id='sh_pos_customer_order_dicount_form' model='ir.ui.view'>
        <field name='name'>sh.pos.customer.order.discount.inherit</field>
        <field name='model'>res.partner</field>
        <field name='inherit_id' ref='base.view_partner_form' />
        <field name='arch' type='xml'>
            <field name='property_payment_term_id' position='before'>
                <field name="sc_pwd"  groups='base.group_system'/>
                <!-- <field name="check_sc_pwd"  groups='base.group_system'/> -->
                <field name='sh_customer_discount' attrs="{'invisible': [('check_sc_pwd', '=', False)]}"/>
            </field>
        </field>
    </record>
    <record id="sh_pos_customer_discount_res_config_form_inherit" model="ir.ui.view">
        <field name="name">pos.customer.discount.res.config.setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='point_of_sale']" position="inside">
                <h2>Point of sale Customer Discount</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_customer_discount" /> :
                            <field name="sh_customer_discount" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
