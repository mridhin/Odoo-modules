<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
 
  <!-- Inherited ActionpadWidget to disable payment -->
  <t t-name="ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension" owl="1">
    	<xpath expr="//div[hasclass('actionpad')]/button[hasclass('pay')]" position="replace">
    		 <button class="button pay" t-att-disabled="orderlinesArray" t-on-click="trigger(props.actionToTrigger or 'click-pay')">
                <div class="pay-circle" t-att-class="{ 'highlight': props.isActionButtonHighlighted }">
                    <i class="fa fa-chevron-right" role="img" aria-label="Pay" title="Pay" />
                </div>
                <t t-esc="props.actionName" />
            </button>
    	</xpath>
   </t>
</templates>