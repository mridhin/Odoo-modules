<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!--added extra field in the
    z-reading-->
    <template id="z_reading_report_inherit" inherit_id="cc_z_reading.z_reading_report_template">
        <xpath expr="//div[hasclass('text-center')]" position="after">
            <div class="awb_zz_middle text-center">
                <p class="awb_p" style="text-align:left;">
                    <span class="awb_p_1">Beginning Sales Invoice Number:</span>
                    <span class="awb_p_2" style="float:right;" >
                        <t t-if="o.begin_or_no">
                            <span t-esc="o.begin_or_no" />
                        </t>
                        <t t-else="">
                            <span t-esc="currency_id_symbol" />
                            <span>0.00</span>
                        </t>

                    </span>

                </p>
                <p class="awb_p" style="text-align:left;">
                    <span>Ending Sales Invoice Number:</span>
                    <span class="awb_p_2" style="float:right;" >
                        <t t-if="o.end_or_no">
                            <span t-esc="o.end_or_no" />
                        </t>
                        <t t-else="">
                            <span t-esc="currency_id_symbol" />
                            <span>0.00</span>
                        </t>
                    </span>

                </p>
                <p class="awb_p" style="text-align:left;">
                    <span style="font-size:12px;">Accumulated Beginning Adjustment:</span>
                    <span class="awb_p_3" style="float:right;" >
                        <t t-if="o.acc_beginning">
                            <span t-esc="o.acc_beginning"
                                t-options="{'widget': 'monetary', 'display_currency': currency_id}" />
                        </t>
                        <t t-else="">
                            <span t-esc="currency_id_symbol" />
                            <span>0.00</span>
                        </t>
                    </span>

                </p>
                <p class="awb_p" style="text-align:left;">
                    <span style="font-size:12px;">Accumulated Ending Adjustment:</span>
                    <span class="awb_p_3" style="float:right;" >
                        <t t-if="o.acc_end">
                            <span t-esc="o.acc_end"
                                t-options="{'widget': 'monetary', 'display_currency': currency_id}" />
                        </t>
                        <t t-else="">
                            <span t-esc="currency_id_symbol" />
                            <span>0.00</span>
                        </t>
                    </span>

                </p>

                <p class="awb_p" style="font-size:12px; text-align:left;">
                    <span style="font-size:12px;">Beginning Adjustment Number:</span>
                    <span class="awb_p_3" style="float:right;" >
                        <t t-if="o.acc_beginning_no">
                            <span style="font-weight:bold;" t-esc="o.acc_beginning_no" />
                        </t>
                    
                        <t t-else="">
                            <span></span>
                        </t>
                    </span>

                </p>
                <p class="awb_p" style="font-size:12px; text-align:left;">
                    <span style="font-size:12px;">Ending Adjustment Number:</span>
                    <span class="awb_p_3" style="float:right;" >
                        <t t-if="o.acc_end_no">
                            <span style="font-weight:bold;" t-esc="o.acc_end_no" />
                        </t>
                        <t t-else="">
                            <span></span>
                        </t>
                    </span>

                </p>
            </div>
        </xpath>
    </template>

    <record id="view_cc_z_reading_inherit" model="ir.ui.view">
        <field name="name">cc.x.reading.inherit</field>
        <field name="model">cc_z_reading.z_reading</field>
        <field name="inherit_id" ref="cc_z_reading.z_reading_view_form" />
        <field name="arch" type="xml">
            <field name="ending_reading">
                <field name="begin_or_no" invisible="1" />
            </field>
        </field>
    </record>

</odoo>