<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="VoidOrderReasonPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup product-info-popup">
                <header class="title">
                   <t t-esc="props.title" />
                </header>
                <main class="body">
                    <t t-esc="props.body" />
                    <label for="addition_reason_to_void">Reason </label>
                    <input type="text" id="addition_reason_to_void" name="addition_reason_to_void" maxlength="25" />                
                </main>
                <footer class="footer">
                    
                    <div class="button confirm" t-on-click="VoidOrder">
                            <t t-esc="props.confirmText" />
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        <t t-esc="props.cancelText" />
                    </div>
                </footer>
            </div>
        </div>
    </t>
</templates>
