<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_pos_order_summary_report" model="ir.ui.view">
        <field name="name">pos.config.form.view.inherit.pos_order_summary_report</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='posbox_reference']" position="after">
                <h2>Auto Invoice</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="auto_invoice">
                        <div class="o_setting_left_pane">
                            <field name="auto_invoice" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auto_invoice" string="Auto Invoice" />
                            <div class="text-muted mb16">
                                Invoice Should be generated by default for pos order.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>