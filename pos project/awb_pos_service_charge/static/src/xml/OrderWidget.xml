<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-name="awb_pos_service_charge.OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//OrderSummary" position="replace">
            <OrderSummary total="state.total" tax="state.tax" service_charge="state.service_charge"/>
        </xpath>
    </t>
    
    <t t-name="awb_pos_service_charge.Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension" owl="1">
        
        <xpath expr="//li[hasclass('orderline')]" position="attributes">
        	<attribute name="t-if">props.line.is_service_charge == false</attribute>
        </xpath>
        
    </t>

    <t t-name="awb_pos_service_charge.OrderSummary" t-inherit="point_of_sale.OrderSummary" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('subentry')]" position="after">
            <div class="subentry" t-if="props.service_charge">
                Service Charge:
                <span class="value">
                    <t t-esc="props.service_charge" />
                </span>
            </div>
        </xpath>
    </t>

</templates>
