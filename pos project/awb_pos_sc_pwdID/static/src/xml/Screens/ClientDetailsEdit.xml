<?xml version="1.0" encoding="utf-8"?>
<templates id='template' xml:space="preserve">
    <t t-name='ClientDetailsEdit' t-inherit='point_of_sale.ClientDetailsEdit' t-inherit-mode="extension" owl='1'>
        <xpath expr="//div[hasclass('client-details-right')]/div[hasclass('client-detail')][5]" position="after">
        <div class="client-detail">
            <span class="label" id="sc_pwd_checkbox_label">SC/PWD</span>
            <input style="width: 1em;" t-on-change="showIDs" type="checkbox" name="check_sc_pwd" id="check_sc_pwd_checkbox" t-model="props.partner.check_sc_pwd" />
        </div>
        <div class="client-detail sc-pwd-fields">
            <span class="label">SC ID</span>
            <input class="detail" name="sc_id" t-on-change="captureChange" 
                    t-att-value="props.partner.sc_id || ''"/>
        </div>
        <div class="client-detail sc-pwd-fields">
            <span class="label">PWD ID</span>
            <input class="detail" name="pwd_id" t-on-change="captureChange" 
                    t-att-value="props.partner.pwd_id || ''"/>
        </div>
    </xpath>
    </t>
</templates>