            <field name="name">Timesheet Weekly Details</field>
            <field name="res_model">timesheet.weekly.details</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Weekly Details" id="timesheet_weekly_details_menu" parent="hr_timesheet.menu_hr_time_tracking"
              action="awb_timesheet_notification.timesheet_weekly_details_action_window"/> -->
    </data>
</odoo>
