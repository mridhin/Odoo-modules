<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="customer_testimonial_success" name="Customer Review">
		<t t-call="website.layout">
			<div id="wrap" class="oe_structure oe_empty">
				<div class="row">
					<div class="col-md-12 pt24 pb24 ">
						<div class="text-center"><h4>Thanks for submitting review.</h4></div>
					</div>
				</div>
			</div>
		</t>
	</template>

    <template id="customer_testimonial" name="Customer Review">
		<t t-call="website.layout">
			<div id="wrap" class="oe_structure oe_empty">
				<div class="row">
					<div class="col-md-12">
						<div class="pt24">
							<div class="container">
								<h4>Customer Review</h4>
							</div>
						</div>
						<div class="container">
							<form id="customer_review_form" action="/submit_customer_review/" method="post" enctype="multipart/form-data">


								<div class="row s_col_no_bgcolor">
									<div class="form-group col-12">
										<div class="row s_col_no_resize s_col_no_bgcolor">
											<label class="col-form-label col-sm-auto" style="width: 200px" for="contact1">
												<span>Name</span>
												<span> *</span>
											</label>
											<div class="col-sm">
												<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
												<input type="hidden" name="modal_name" value="website.customer.testimonials" />
												<input type="hidden" name="redirect" value="/customer_testimonial_success" />
												<input id="reviewer_name" type="text" class="form-control s_website_form_input" name="reviewer_name" required="required" t-att-value="name" autocomplete="off"/>
											</div>
										</div>
									</div>
									<div class="form-group col-12" >
										<div class="row s_col_no_resize s_col_no_bgcolor">
											<label class="col-form-label col-sm-auto" style="width: 200px" for="reviewer_title">
												<span>Title / Designation</span>
												<span> *</span>
											</label>
											<div class="col-sm">
												<input id="reviewer_title" type="name" class="form-control s_website_form_input" name="reviewer_title" required="required" />
											</div>
										</div>
									</div>

									<div class="form-group col-12" >
										<div class="row s_col_no_resize s_col_no_bgcolor">
											<label class="col-form-label col-sm-auto" style="width: 200px" for="rating">
												<span>Rating</span>
												<span> *</span>
											</label>
											<div class="col-sm">
												<span class="fa fa-star checked rating_icon rating_icon_1" data-rating="1"></span>
												<span class="fa fa-star checked rating_icon rating_icon_2" data-rating="2"></span>
												<span class="fa fa-star checked rating_icon rating_icon_3" data-rating="3"></span>
												<span class="fa fa-star checked rating_icon rating_icon_4" data-rating="4"></span>
												<span class="fa fa-star checked rating_icon rating_icon_5" data-rating="5"></span>
												<input type="hidden" class="form-control rating_val" name="rating" value="5" />
												<!--<select name="rating" class="form-control s_website_form_input" required="required">
													<option value="0">0</option>
													<option value="1">1</option>
													<option value="2">2</option>
													<option value="3">3</option>
													<option value="4">4</option>
													<option value="5" selected="selected">5</option>
												</select>-->
											</div>
										</div>
									</div>
									<div class="form-group col-12" >
										<div class="row s_col_no_resize s_col_no_bgcolor">
											<label class="col-form-label col-sm-auto" style="width: 200px" for="name">
												<span>Review Title</span>
												<span> *</span>
											</label>
											<div class="col-sm">
												<input id="name" type="text" class="form-control s_website_form_input" name="name" required="required" />
											</div>
										</div>
									</div>
									<div class="form-group col-12"  >
										<div class="row s_col_no_resize s_col_no_bgcolor">
											<label class="col-form-label col-sm-auto" style="width: 200px" for="review_text">
												<span>Review</span>
												<span> *</span>
											</label>
											<div class="col-sm">
												<textarea id="review_text" class="form-control s_website_form_input" name="review_text" required="required"></textarea>
											</div>
										</div>
									</div>

									<div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
										<input type="submit" value="submit" class="btn btn-info" />
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</t>

    </template>
</odoo>