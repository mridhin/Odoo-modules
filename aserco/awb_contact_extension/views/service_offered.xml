<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- created tree and form view for service and products -->
	<record id="offer_type_tree" model="ir.ui.view">
		<field name="name">offer.type.tree</field>
		<field name="model">service.offered</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="ser_type" />
				<!-- <field name="active" widget="boolean_toggle" /> -->



			</tree>
		</field>
	</record>
	<record id="offer_type_form" model="ir.ui.view">
		<field name="name">offer.type.form</field>
		<field name="model">service.offered</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<div class="oe_title">

						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group>
						<group>
							<field name="name" />

							<field name="ser_type" widget="radio"
								options="{'horizontal': True}" />
								<!-- For Archived the offer type record -->
							<field name="active" invisible="1"/> 


						</group>
						<group>
							<field name="tag" class="tag_col"
								style="background-color: #f7cd1f; text-align: center; color=#797221; border-radius: 323px;text-align: center; background-radius: 47px; width: 190px;" />
						</group>
					</group>

				</sheet>
			</form>
		</field>
	</record>
	<record id="action_offer_type" model="ir.actions.act_window">
		<field name="name">Offer Types</field>
		<field name="res_model">service.offered</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Offer Types
			</p>
		</field>
	</record>

	<!-- creating a menu -->

	<menuitem id="offer_type_menu" name="Offer Types"
		action="action_offer_type" sequence="1"
		parent="contacts.res_partner_menu_config" />

<!-- For Archived the offer type record -->

<record id="service_offered_search_view" model="ir.ui.view">
    <field name="name">service.offered.search</field>
    <field name="model">service.offered</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" string="Name" />
            <field name="ser_type" string="Service Type" />
            <filter name="unarchived" string="Unarchived" domain="[('active', '=', True)]"/>
            <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
        </search>
    </field>
</record>



</odoo>