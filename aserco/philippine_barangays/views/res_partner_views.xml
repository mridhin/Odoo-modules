<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit_philippine_cities" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_address_format')]" position="replace">
                    <div class="o_address_format">
                        <field name="country_code" invisible="1"/>
                        <div attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}" class="oe_edit_only"><b>Company Address:</b></div>
                        <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                        <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('country_code','=','PH')]}"/>
                        <field name="barangay_id" placeholder="Barangay..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('country_code','!=','PH')]}" options="{&quot;no_open&quot;: True}"/>
                        <field name="partner_city_id" placeholder="City" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('country_code','!=','PH')]}" options="{&quot;no_open&quot;: True}"/>
                        <field name="city_id" placeholder="City" class="o_address_city" invisible="1"/>
                        <field name="city" placeholder="City" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('country_code','=','PH')]}"/>
                        <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}"/>
                        <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                        <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="base.view_country_state_form" model="ir.ui.view">
            <field name="name">res.country.state.form</field>
            <field name="model">res.country.state</field>
            <field name="arch" type="xml">
                <form string="State">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="country_id" options='{"no_open": True, "no_create": True}'/>
                        </group>
                        <notebook>
                            <page name="city" string="Cities">
                                <field name="city_ids" widget="one2many" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="city_code"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="base.view_country_state_tree" model="ir.ui.view">
            <field name="name">res.country.state.tree</field>
            <field name="model">res.country.state</field>
            <field name="arch" type="xml">
                <tree string="State">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="country_id" options="{'no_create': True, 'no_open': True}"/>
                </tree>
            </field>
        </record>

        <record id="base.action_country_state" model="ir.actions.act_window">
            <field name="name">Provinces</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.state</field>
            <field name="view_id" ref="base.view_country_state_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Provience
                </p><p>
                    Proviences belong to countries and are part of your contacts' addresses.
                </p>
            </field>
        </record>

<!--        <record id="action_help_update_province" model="ir.actions.act_window">-->
<!--            <field name="name">How to Update Provinces</field>-->
<!--            <field name="res_model">provience.help</field>-->
<!--            <field name="view_mode">form</field>-->
<!--            <field name="target">new</field>-->
<!--        </record>-->

        <menuitem id="contacts.menu_country_state_partner"
                  name="Provinces"
                  action="base.action_country_state"
                  parent="contacts.menu_localisation"
                  sequence="2"/>

        <record id="action_help_update_province" model="ir.actions.act_url">
            <field name="name">Update Province</field>
            <field name="type">ir.actions.act_url</field>
            <field name="target">self</field>
            <field name="url" eval="'/province/'"/>
        </record>

        <record id="action_help_update_city" model="ir.actions.act_url">
            <field name="name">Update City</field>
            <field name="type">ir.actions.act_url</field>
            <field name="target">self</field>
            <field name="url" eval="'/city/'"/>
        </record>

        <record id="action_help_update_barangay" model="ir.actions.act_url">
            <field name="name">Update Barabgay</field>
            <field name="type">ir.actions.act_url</field>
            <field name="target">self</field>
            <field name="url" eval="'/barangay/'"/>
        </record>

        <menuitem id="res_partner_menu_help"
        name="Help"
        parent="contacts.menu_contacts"
        groups="base.group_system"
        sequence="3"/>

        <menuitem id="menu_partner_help_province"
        action="action_help_update_province"
        name="How to Update Provinces"
        sequence="1" parent="res_partner_menu_help"/>

        <menuitem id="menu_partner_help_cities"
        action="action_help_update_city"
        name="How to Update Cities"
        sequence="2" parent="res_partner_menu_help"/>

        <menuitem id="menu_partner_help_barangay"
        action="action_help_update_barangay"
        name="How to Update Barangay"
        sequence="3" parent="res_partner_menu_help"/>
    </data>
</odoo>
