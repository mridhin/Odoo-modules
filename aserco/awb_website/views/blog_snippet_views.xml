<odoo>
    <record id="blog_image" model="ir.ui.view">
        <field name="name">blog_image_view</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='blog_details']" position="inside">
                <field name="blog_image" widget='image' options="{'size': [90, 90]}"/>
            </xpath>
        </field>
    </record>
</odoo>