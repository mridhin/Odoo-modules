<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="calendar_appointment_type_view_inherit" model="ir.ui.view">
        <field name="name">Calendar Appointment View Inherit</field>
        <field name="model">calendar.appointment.type</field>
        <field name="inherit_id" ref="appointment.calendar_appointment_type_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@class='oe_title']" position="after">

                <field name="blog_image" widget="image" options="{'size': [90, 90]}"/>


<!--                <field name="blog_image" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;avatar_128&quot;}"/>-->
            </xpath>

            <xpath expr="//field[@name='lead_create']" position="before">
                <field name="subtitle"/>
                <field name="is_coming_soon"/>
            </xpath>
        </field>
    </record>
</odoo>
