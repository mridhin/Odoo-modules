<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sms_template_active_inherit_form" model="ir.ui.view">
        <field name="name">sms.template.active.inherit.form</field>
        <field name="model">sms.template</field>
        <field name="inherit_id" ref="sms.sms_template_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='lang']" position="after">
                <field name="active" invisible = "1"/>
             </xpath>
        </field>
    </record>

</odoo>