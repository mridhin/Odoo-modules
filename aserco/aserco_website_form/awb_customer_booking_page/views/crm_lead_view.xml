<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="crm_lead_view_form_inherit_awb_customer_booking_page" model="ir.ui.view">
            <field name="name">crm.lead.customer.booking.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_address_format')]" position="replace">
                    <div class="o_address_format">
                        <field name="street" placeholder="Street..." class="o_address_street"/>
                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                        <field name="barangay" placeholder="Barangay..." class="o_address_street" options="{&quot;no_open&quot;: True}"/>
                        <field name="city" placeholder="City" class="o_address_city"/>
                        <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                        <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='partner_name']" position="after">
                    <field name="appointment_type"/>
                    <field name="service_date" required="1"/>
                    <field name="prefer_time_slot" widget="radio"/>
                </xpath>
            </field>
        </record>
</odoo>

