<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- created tree and form view for service and products -->
	<record id="territory_territory_tree" model="ir.ui.view">
		<field name="name">territory.territory.tree</field>
		<field name="model">territory.territory</field>
		<field name="arch" type="xml">
			<tree>
				<field name="region_ids" widget='many2many_tags' />
				<field name="name" />
				<field name="technician_ids" widget='many2many_tags' />

				<!-- <field name="active" widget="boolean_toggle" /> -->
			</tree>
		</field>
	</record>

	<record id="offer_type_form" model="ir.ui.view">
		<field name="name">territory.territory.form</field>
		<field name="model">territory.territory</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<div class="oe_title">

						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group>
						<group>
							<field name="region_ids" widget='many2many_tags'/>

							<field name="awb_city_id" widget='many2many' />
								<!-- For Archived the offer type record -->

						</group>
						<group>
							<field name="technician_ids" string="Technicians"  domain = "[('asc_service_provider', '=', True)]">
							    <tree string="Contact" >
							        <field name="name"/>
							     
							    </tree>
							   
							</field>
						</group>
					</group>
					<group>
						<group string="Other Information">
							 <field name="warehouse_id"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="action_territory" model="ir.actions.act_window">
		<field name="name">Territory</field>
		<field name="res_model">territory.territory</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Territory
			</p>
		</field>
	</record>

	<!-- creating a menu -->

	<menuitem id="territory_menu" name="Territory"
		action="action_territory" sequence="13"
		parent="industry_fsm.fsm_menu_settings" />





</odoo>