<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- created tree and form view for service and products -->
	<record id="awb_city_tree" model="ir.ui.view">
		<field name="name">awb.city.tree</field>
		<field name="model">awb.city</field>
		<field name="arch" type="xml">
			<tree>
				<field name="province_id" />
				<field name="name" />
				<!-- <field name="active" widget="boolean_toggle" /> -->
			</tree>
		</field>
	</record>
	<record id="awb_city_form" model="ir.ui.view">
		<field name="name">awb.city.form</field>
		<field name="model">awb.city</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<div class="oe_title">

						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group>
						<group>
							<field name="province_id" />

							<field name="country_id" />
			

						</group>
						<group>
							<field name="zip_code" />
						</group>
					</group>

				</sheet>
			</form>
		</field>
	</record>
	<record id="action_awb_city" model="ir.actions.act_window">
		<field name="name">City</field>
		<field name="res_model">awb.city</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				City
			</p>
		</field>
	</record>

	<!-- creating a menu -->

	<menuitem id="awb_city_menu" name="City"
		action="action_awb_city" sequence="99"
		parent="base.menu_administration" />

<!-- For Archived the offer type record -->



</odoo>