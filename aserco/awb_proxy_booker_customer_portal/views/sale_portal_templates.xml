<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="customer_portal_my_orders" name="My Sales Orders" inherit_id="sale.portal_my_orders">
		<xpath expr="//thead/tr/th[1]" position="after">
			<th>Customer</th>
		</xpath>
		<xpath expr="//t[@t-foreach='orders']/tr/td[1]" position="after">
			<td><t t-esc="order.partner_id.name"></t></td>
		</xpath>
	</template>
	<template id="customer_portal_my_quotations" name="My Quotations" inherit_id="sale.portal_my_quotations">
		<xpath expr="//thead/tr/th[1]" position="after">
			<th>Customer</th>
		</xpath>
		<xpath expr="//t[@t-foreach='quotations']/tr/td[1]" position="after">
			<td><t t-esc="quotation.partner_id.name"></t></td>
		</xpath>
	</template>
</odoo>
