<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='sh_pos_customer_dicount_configuration' model='ir.ui.view'>
        <field name='name'>sh.pos.customer.discount.inherit.config</field>
        <field name='model'>pos.config</field>
        <field name='inherit_id' ref='point_of_sale.pos_config_view_form'/>
        <field name='arch' type='xml'>
            <xpath expr="//div[hasclass('o_settings_container')][2]" position='after'>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_account"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_account"/>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <label for="crm_team_id"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <field name="crm_team_id"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>