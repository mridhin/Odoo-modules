<?xml version="1.0" encoding="UTF-8"?>
<templates id='template' xml:space="preserve">
    <t t-name="PartnerDetailsEdit" t-inherit="point_of_sale.PartnerDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('partner-details-left')]" position="inside">
            <div class='partner-detail' t-if='env.pos.config.sh_enable_customer_discount'>
                <span class="label">Discount</span>
                <input name="sh_customer_discount" id='sh_customer_discount'
                       class="sh_customer_discount"
                       t-att-value="props.partner.sh_customer_discount || ''"/>
            </div>
        </xpath>
    </t>
</templates>
