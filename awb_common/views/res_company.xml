<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="before">
                    <field name="taxpayer_is_vat_registered" string="Vat Registered" />
                    <field name="taxpayer_identification_number" string="TIN" />
                    <field name="taxpayer_remarks" string="Remarks" />
                    <field name="taxpayer_info" string="Taxpayer Info" invisible="1" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>