<odoo>
    <data>
        <template id="Maintenance">
            <t t-call="website.layout">
                <div class="container">
                    <title>Maintenance</title>
                    <form t-attf-action="/submit" method="post">
                        <div class="form-group form-field o_website_form_required_custom">
                            <br/>
                            <br/>
                            <p>
                                <h2>
                                    <b>Maintenance Request</b>
                                </h2>
                            </p>
                            <br/>
                            <label class="col-md-3 col-sm-4 control-label"
                                   for="subject">Subject
                            </label>
                            <div class="col-lg-7 col-md-8">
                                <input type="text"
                                       class="form-control o_website_form_input"
                                       name="subject"/>
                            </div>
                        </div>
                        <div class="form-group form-field o_website_form_required_custom">
                            <input type="text"
                                   class="form-control o_website_form_input team"
                                   name="team"
                                   style="visibility: hidden; display: none;"/>
                            <label class="col-md-3 col-sm-4 control-label"
                                   for="from">Team
                            </label>
                            <div class="col-lg-7 col-md-8">
                                <select class="form-control o_website_form_input"
                                        name="teams" required="">
                                    <option value="">Select Team</option>
                                    <t t-foreach="team_selection" t-as="team">
                                        <option t-att-value="team['id']">
                                            <t t-esc="team['name']"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <br/>
                            <label class="col-md-3 col-sm-4 control-label date_to"
                                   for="to">Employee
                            </label>
                            <div class="col-lg-7 col-md-8">
                                <select class="form-control o_website_form_input"
                                        id="employee" name="employee"
                                        required="">
                                    <option value="">Select Employee</option>
                                    <t t-foreach="employee"
                                       t-as="emp">
                                        <option t-att-value="emp['id']">
                                            <t t-esc="emp['name']"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <br/>
                            <label class="col-md-3 col-sm-4 control-label date_to"
                                   for="to">Equipment
                            </label>
                            <div class="col-lg-7 col-md-8">
                                <select class="form-control o_website_form_input"
                                        id="equipment" name="equipment"
                                        required="">
                                    <option value="">Select Equipment</option>
                                    <t t-foreach="equipment_selection"
                                       t-as="equipment">
                                        <option t-att-value="equipment['id']">
                                            <t t-esc="equipment['name']"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <br/>
                            <label class="col-md-3 col-sm-4 control-label date_to"
                                   for="to">Priority
                            </label>
                            <div class="col-lg-7 col-md-8">
                                <select class="form-control o_website_form_input"
                                        id="priority_id" name="stars"
                                        required="">
                                    <option value="">Select Priority</option>
                                    <option value="0">Very Low</option>
                                    <option value="1">Low</option>
                                    <option value="2">Normal</option>
                                    <option value="3">High</option>
                                </select>
                            </div>
                            <br/>
                        </div>
                        <div class="form-group form-field o_website_form_required_custom">
                            <label class="col-md-3 col-sm-4 control-label"
                                   for="description">Details
                            </label>
                            <div class="col-md-7 col-sm-8">
                                <textarea class="form-control" rows="5"
                                          name="details"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                                <button type="submit"
                                        class="btn btn-primary btn-lg o_website_form_send">
                                    Submit
                                </button>
                                <span id="o_website_form_result"></span>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                    </form>
                </div>
            </t>
        </template>
        <record id="thanks" model="website.page">
            <field name="name">Thanks</field>
            <field name="type">qweb</field>
            <field name="url">/maintenance_request-thanks</field>
            <field name="website_published">True</field>
            <field name="arch" type="xml">
                <t name="Thanks" t-name="maintenance_request.thanks">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="oe_structure"/>
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="alert alert-success"
                                             role="status">
                                            Your maintenance request has been
                                            submitted successfully.
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <t t-call="website.company_description"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>